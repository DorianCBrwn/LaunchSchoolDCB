<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%=@title %></title>
</head>

<body>

  t<div id="layout">
      <div id="main">
        <div class="header">
          <h1>Files</h1>
        </div>

        <div class="content">
          <h2 class="content-subhead">public dir</h2>
          <div></div>
          <div >
            <ul >
                <% @contents.each do |item| %>
                  <li class="item">
                    <a href="<%= item %>" class="pure-menu-link"><%=item %></a>
                  </li>
                <% end %>
            </ul>
              <% if params[:sort] == "desc" %>
    <a href="/">Sort ascending</a>
  <% else %>
    <a href="/?sort=desc">Sort descending</a>
  <% end %>
          </div>
        </div>
      </div>
  </div>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>